<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_notification"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_gravity="center"
        android:background="#50868686"
        android:src="@drawable/ic_notification" />
    
    <ImageView 
        android:layout_width="0.25dip"
        android:layout_height="match_parent"
        android:background="#10000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dip"
        android:gravity="center|left"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_notification"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#919191"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cancelNoti"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_gravity="center"
        android:layout_margin="8dip"
        android:background="@drawable/notification_search_bg"
        android:padding="8dip"
        android:src="@drawable/ic_notification_small" />

</LinearLayout>