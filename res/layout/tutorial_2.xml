<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tutorial2"
        style="@style/sectionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:src="@drawable/tutorial_menu_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:src="@drawable/tutorial_menu_2" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        style="@style/tutorial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_menu_desc"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>