<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="NeedIt.Preference.Dialog" parent="@android:style/Theme.Dialog">
    </style>
    
    <style name="NeedIt.Preference" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    
    <style name="sectionbar">
        <item name="android:textColor">#b1b1b1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:background">@drawable/list_section_divider_holo_light</item>
    </style>
    
    <style name="tutorial_text">
        <item name="android:textColor">#868686</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">12dip</item>
    </style>

</resources>
